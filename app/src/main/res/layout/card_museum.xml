<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cv_museum"
    android:onClick="onClicMuseum"

    >


    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        >
        <!--Icon or photo of the museum -->
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/museum_photo"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="16dp"
            />
        <!--Name of the museum -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/museum_name"
            android:layout_toRightOf="@+id/museum_photo"
            android:layout_alignParentTop="true"
            android:textSize="30sp"
            />
        <!--Address of the museum -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/museum_address"
            android:layout_toRightOf="@+id/museum_photo"
            android:layout_below="@+id/museum_name"
            />
        <!--Time of visit-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/visit_date"
            android:layout_toRightOf="@+id/museum_photo"
            android:layout_below="@+id/museum_address"
            />
        <!-- Time and Price -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"/>
    </RelativeLayout>

</android.support.v7.widget.CardView>